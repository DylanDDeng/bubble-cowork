{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "../../dist-electron",
    "rootDir": "..",
    "declaration": false,
    "typeRoots": ["../../node_modules/@types", "./libs"]
  },
  "include": ["./**/*.ts", "./**/*.cts", "../shared/**/*.ts"],
  "exclude": ["node_modules"]
}
