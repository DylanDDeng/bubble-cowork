{
  "appId": "com.bubble.cowork",
  "productName": "Bubble Cowork",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "files": [
    "dist-electron/**/*",
    "dist-react/**/*",
    "package.json",
    "node_modules/**/*"
  ],
  "asarUnpack": [
    "node_modules/@anthropic-ai/**/*",
    "node_modules/better-sqlite3/**/*"
  ],
  "extraResources": [
    {
      "from": "dist-electron/electron/preload.cjs",
      "to": "preload.cjs"
    }
  ],
  "mac": {
    "target": ["dmg"],
    "category": "public.app-category.developer-tools"
  },
  "win": {
    "target": ["portable", "nsis"]
  },
  "linux": {
    "target": ["AppImage"],
    "category": "Development"
  },
  "publish": [
    {
      "provider": "github"
    }
  ]
}
