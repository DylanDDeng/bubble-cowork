{
  "appId": "com.bubble.cowork",
  "productName": "Bubble Cowork",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "files": [
    "dist-electron/**/*",
    "dist-react/**/*",
    "package.json",
    "node_modules/**/*"
  ],
  "asarUnpack": [
    "node_modules/@anthropic-ai/**/*",
    "node_modules/better-sqlite3/**/*"
  ],
  "extraResources": [
    {
      "from": "dist-electron/electron/preload.cjs",
      "to": "preload.cjs"
    }
  ],
  "mac": {
    "artifactName": "Bubble-Cowork-${version}-${arch}-mac.${ext}",
    "target": [
      { "target": "dmg", "arch": ["x64", "arm64"] },
      { "target": "zip", "arch": ["x64", "arm64"] }
    ],
    "category": "public.app-category.developer-tools"
  },
  "win": {
    "target": ["portable", "nsis"]
  },
  "nsis": {
    "artifactName": "Bubble-Cowork-${version}-win-${arch}-setup.${ext}"
  },
  "portable": {
    "artifactName": "Bubble-Cowork-${version}-win-${arch}-portable.${ext}"
  },
  "linux": {
    "target": ["AppImage"],
    "category": "Development"
  },
  "appImage": {
    "artifactName": "Bubble-Cowork-${version}-linux-${arch}.${ext}"
  },
  "publish": [
    {
      "provider": "github"
    }
  ]
}
